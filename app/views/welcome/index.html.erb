<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to 'Enviar uma receita', new_recipe_path %>
<% @recipes.each do |r| %>
<%= link_to r.title, r %>

  <h1><%= r.title %></h1>
  <ul>
    <li><%= r.recipe_type %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  </ul>
<% end %>

<%= @cuisines.each do |c| %>
  <%= link_to c.name, c %>
<% end %>
